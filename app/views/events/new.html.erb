<h1>Nouvel Evénement</h1>

    <%= form_for @event, url: {controller: "events", action: "create"}, html: {class: "nifty-form"} do |f| %>

      <%= f.label "Description" %>
      <%= f.text_field :description %>

      <%= f.label "Date" %>
      <%= f.date_field :date %>

      <%= f.label "Lieu" %>
      <%= f.text_field :place %>      

      <%= f.submit "Créer l'événement", class: "btn btn-lg btn-primary" %>
    <% end %>
