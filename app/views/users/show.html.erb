<h1>Mon Profil</h1>

<%= @user.id %>
<%= @user.name %>

<table>
	<% @user.created_events.each do |event| %>
    <tr>
      <td><%= event.description %></td>	
      <td><%= event.date %></td>
      <td><%= event.place %></td>
      <td><%= link_to "Consulter l'événement", event_path(event) %></td>
      <% end %>
    </tr>
</table>

<% if @user.attended_events.empty? == false %>
<p>Cet utilisateur participe aux événements suivants :</p>
  <% @user.attended_events.each do |event| %>
    <%= event.description %>
    <% end %>
<% end %>  

<% if @user == current_user %>
  <%= link_to "Créer un nouvel événement", new_event_path %>
  <%= link_to "Déconnexion", logout_path, method: :delete %>
<% end %>