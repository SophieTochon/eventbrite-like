<h1>Créer un nouvel utilisateur</h1>

	<% if @user.invalid? %>
	  <div class="alert alert-danger">
	  	<ul>
		  <% @user.errors.full_messages.each do |message| %>
		  <li><%= message %></li>
		  <% end %>
		</ul>
	  </div>
	<% end %>

    <%= form_for @user, url: {controller: "users", action: "create"}, html: {class: "nifty-form"} do |f| %>

      <%= f.label "Nom" %>
      <%= f.text_field :name %>

      <%= f.label "Password" %>
      <%= f.password_field :password %>

      <%= f.label "Confirmation" %>
      <%= f.password_field :password_confirmation %>      

      <%= f.submit "Créer le profil", class: "btn btn-lg btn-primary" %>
    <% end %>